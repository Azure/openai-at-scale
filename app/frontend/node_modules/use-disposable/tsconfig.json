{
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2019",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["ES2019", "dom"],
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "pretty": true,
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "jsx": "react"
  },
  "include": [],
  "exclude": ["node_modules"],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
